{
  "name": "monad-mcp-server",
  "version": "0.1.0",
  "description": "Production-grade MCP server for AI-powered blockchain code migration to Monad",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc && node dist/index.js",
    "watch": "tsc --watch",
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop all",
    "pm2:restart": "pm2 restart all",
    "pm2:delete": "pm2 delete all",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.72.1",
    "@modelcontextprotocol/sdk": "^1.3.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "pino": "^9.5.0",
    "tree-sitter": "^0.25.0",
    "tree-sitter-solidity": "^1.2.13",
    "ts-node": "^10.9.2",
    "web-tree-sitter": "^0.26.3"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "mcp",
    "blockchain",
    "monad",
    "code-migration",
    "ai-agents"
  ],
  "author": "Monad Team",
  "license": "MIT"
}
